<div class="container">
  <% if !tasks %>
    <span class="text-warning">There are no tasks!</span>
  <% else %>
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Created at</th>
          <th>Completed</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.each do |task| %>
          <tr>
            <td>
              <strong>
                <%= task.title %>
              </strong>
            </td>
            <td class="text-info">
              <%= task.created_at %>
            </td>
            <td class="text-success">
              <%= task.completed %>
            </td>
            <td class="text-success">
              <%= link_to task_path(task), remote: true, method: :delete, data: {confirm: "Are you sure you want to delete task #{task.title}?"} do %>  <i class="icon-remove"></i><% end %>
                
            </td>
            
  


          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
